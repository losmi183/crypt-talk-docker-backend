                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "conversation_id",
                                    "file"
                                ],
                                "properties": {
                                    "conversation_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "file": {
                                        "description": "Image or video file (jpg, png, gif, mp4, mov, avi)",
